<%= index_title %>
<%= render :partial => "assets/new_button", :locals => {:new_object_path => new_presentation_path, :label => "Upload a #{t('presentation')}"} %>

<% if index_with_facets?(controller_name)  %>
    <%= render :partial => "assets/filter_button", :locals => {:index_path => presentations_path} %>

    <% if params[:user_enable_facet] == 'true' %>
        <%= render :partial => "faceted_browsing/faceted_browsing", :object => @presentations %>
    <% else %>
        <%= render :partial => "assets/resources_alphabetical_paginated", :object => @presentations %>
    <% end %>
<% else %>
    <%= render :partial => "assets/resources_alphabetical_paginated", :object => @presentations %>
<% end %>
