<%= index_title -%>

<% if index_with_facets?(controller_name)  %>
    <%= render :partial => "assets/filter_button", :locals => {:index_path => programmes_path} %>

    <% if params[:user_enable_facet] == 'true' %>
        <%= render :partial => "faceted_browsing/faceted_browsing", :object => @programmes %>
    <% else %>
        <%= render :partial => "assets/resources_alphabetical_paginated", :object => @programmes %>
    <% end %>
<% else %>
    <%= render :partial => "assets/resources_alphabetical_paginated", :object => @programmes %>
<% end %>
