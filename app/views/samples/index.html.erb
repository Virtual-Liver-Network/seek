<%= render :partial => "assets/new_button", :locals => {:new_object_path => new_sample_path, :label => "New Sample"} %>

<% if index_with_facets?(controller_name)  %>
    <%= render :partial => "assets/filter_button", :locals => {:index_path => samples_path} %>

    <% if params[:user_enable_facet] == 'true' %>
        <%= render :partial => "faceted_browsing/faceted_browsing", :object => @samples %>
    <% else %>
        <%= render :partial => "assets/resources_alphabetical_paginated", :object => @samples %>
    <% end %>
<% else %>
    <%= render :partial => "assets/resources_alphabetical_paginated", :object => @samples %>
<% end %>


