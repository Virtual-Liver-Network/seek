<%= render :partial => "assets/new_button", :locals => {:new_object_path => new_specimen_path, :label => "New #{(I18n.t 'biosamples.sample_parent_term').capitalize}"} %>

<% if index_with_facets?(controller_name)  %>
    <%= render :partial => "assets/filter_button", :locals => {:index_path => specimens_path} %>

    <% if params[:user_enable_facet] == 'true' %>
        <%= render :partial => "faceted_browsing/faceted_browsing", :object => @specimens %>
    <% else %>
        <%= render :partial => "assets/resources_alphabetical_paginated", :object => @specimens %>
    <% end %>
<% else %>
    <%= render :partial => "assets/resources_alphabetical_paginated", :object => @specimens %>
<% end %>
