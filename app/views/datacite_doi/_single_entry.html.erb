<%
   # Parameters:
   # field
   # field_name
   # obligation: whether the field is mandatory, recommended or optional
   # description: some explanation how to input the content
%>

<div class="metadata">
  <span class="label">
    <%= label_tag "#{field_name}".capitalize %> <%= obligation %>
  </span>

  <span class="description">
    <%= description %>
  </span>

  <div class="field">
    <%= field %>
  </div>
</div>