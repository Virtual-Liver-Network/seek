<%= index_title -%>

<%= render :partial => "assets/new_button", :locals => {:new_object_path => new_investigation_path, :label => "New #{t('investigation')}"} %>

<% if index_with_facets?(controller_name)  %>
    <%= render :partial => "assets/filter_button", :locals => {:index_path => investigations_path} %>

    <% if params[:user_enable_facet] == 'true' %>
        <%= render :partial => "faceted_browsing/faceted_browsing", :object => @investigations %>
    <% else %>
        <%= render :partial => "assets/resources_alphabetical_paginated", :object => @investigations %>
    <% end %>
<% else %>
    <%= render :partial => "assets/resources_alphabetical_paginated", :object => @investigations %>
<% end %>