<%
   filter_path = index_path + '?user_enable_facet=true'
   unfilter_path = index_path
%>
<ul class="sectionIcons">
  <li>
    <%= image_tag_for_key('filter', filter_path, 'Advanced filtering',
                          {:style => params[:user_enable_facet] == 'true' ? 'display: none' : ''}, 'Advanced filtering') %>
  </li>

  <li class="unfilter_button">
    <%= image_tag_for_key('filter', unfilter_path, 'Stop filtering',
                          {:style => params[:user_enable_facet] == 'true' ? '' : 'display: none'}, 'Stop filtering') %>
  </li>
</ul>
