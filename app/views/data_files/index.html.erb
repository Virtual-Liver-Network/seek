<%= index_title -%>
<%= render :partial => "assets/new_button", :locals => {:new_object_path => new_data_file_path, :label => "Upload a #{t('data_file')}"} %>

<% if index_with_facets?(controller_name)  %>
    <%= render :partial => "assets/filter_button", :locals => {:index_path => data_files_path} %>

    <% if params[:user_enable_facet] == 'true' %>
        <%= render :partial => "faceted_browsing/faceted_browsing", :object => @data_files %>
    <% else %>
        <%= render :partial => "assets/resources_alphabetical_paginated", :object => @data_files %>
    <% end %>
<% else %>
    <%= render :partial => "assets/resources_alphabetical_paginated", :object => @data_files %>
<% end %>